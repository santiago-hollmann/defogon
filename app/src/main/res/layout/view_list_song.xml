<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/medium_padding">

    <ImageView
        android:id="@+id/song_favorite_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/medium_padding"
        android:paddingLeft="@dimen/medium_padding"
        android:paddingRight="@dimen/medium_padding"
        android:src="@drawable/ic_star_empty" />

    <TextView
        android:id="@+id/song_item_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/song_favorite_btn"
        android:layout_toLeftOf="@id/song_favorite_btn"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="@dimen/small_padding"
        android:textColor="@color/accent"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/song_item_chords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_item_author_name"
        android:padding="@dimen/small_padding"
        android:textSize="@dimen/extra_big_text" />

</RelativeLayout>