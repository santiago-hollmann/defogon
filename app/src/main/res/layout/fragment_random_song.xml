<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="@dimen/medium_padding"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="@dimen/big_padding"
            android:layout_marginBottom="@dimen/big_distance"
            android:id="@+id/random_song_title"
            android:textColor="@color/accent"
            android:gravity="center"
            android:textSize="@dimen/extra_big_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="@dimen/big_padding"
            android:id="@+id/random_song_chords"
            android:layout_width="match_parent"
            android:textSize="@dimen/extra_big_text"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/random_btn_next"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="@dimen/big_distance"
            android:paddingLeft="@dimen/big_distance"
            android:text="@string/next_song"
            android:layout_marginTop="@dimen/big_distance"
            android:textColor="@color/white"
            android:background="@drawable/material_red_button"
            android:layout_height="@dimen/finger_size" />

    </LinearLayout>
</ScrollView>