<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shollmann.android.fogon"
    android:installLocation="auto"
    android:versionCode="1030"
    android:versionName="1.03.0">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:protectionLevel="signature"
        android:name="com.shollmann.android.fogon.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.shollmann.android.fogon.permission.C2D_MESSAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:theme">
        <activity
            android:name=".ui.activities.SplashActivity"
            android:noHistory="true"
            android:theme="@style/noAnimTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.HomeActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme"
            android:uiOptions="none"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.activities.FavoriteSongsActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme"
            android:uiOptions="none"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.activities.RandomSongsActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme"
            android:uiOptions="none"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="4dee7e6ed623677c8f37f849552d880b7d369413" />

    </application>

</manifest>
